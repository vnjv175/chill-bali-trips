---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { ACTIVITIES, SITE, getWhatsAppLink } from '../../utils/siteData';

export function getStaticPaths() {
  return ACTIVITIES.map(activity => ({
    params: { slug: activity.slug },
    props: { activity },
  }));
}

const { activity } = Astro.props;

const schema = {
  '@context': 'https://schema.org',
  '@type': 'TouristAttraction',
  name: activity.title,
  description: activity.description,
  address: {
    '@type': 'PostalAddress',
    addressLocality: activity.location,
    addressRegion: 'Bali',
    addressCountry: 'ID',
  },
};

const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    { '@type': 'ListItem', position: 1, name: 'Home', item: SITE.url },
    { '@type': 'ListItem', position: 2, name: 'Activities', item: `${SITE.url}/activities/` },
    { '@type': 'ListItem', position: 3, name: activity.title, item: `${SITE.url}/activities/${activity.slug}/` },
  ],
};

const relatedActivities = ACTIVITIES.filter(a => a.slug !== activity.slug).slice(0, 3);
---

<BaseLayout title={`${activity.title} in Bali â€” Book with Chill Bali Trips`} description={activity.description} schema={schema}>
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />

  <section class="section-padding pt-32">
    <div class="container-custom">
      <nav class="mb-8 text-sm text-gray-400">
        <a href="/" class="hover:text-gold-400 transition-colors">Home</a>
        <span class="mx-2">/</span>
        <a href="/activities/" class="hover:text-gold-400 transition-colors">Activities</a>
        <span class="mx-2">/</span>
        <span class="text-gray-300">{activity.title}</span>
      </nav>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-10">
        <div class="lg:col-span-2">
          <div class="aspect-video bg-ocean-800 rounded-2xl overflow-hidden mb-8">
            <img src={activity.image} alt={activity.title} class="w-full h-full object-cover" loading="eager" />
          </div>

          <h1 class="text-3xl md:text-4xl font-bold text-white mb-4">{activity.title}</h1>
          <p class="text-gray-300 text-lg leading-relaxed mb-8">{activity.description}</p>

          <div class="mb-8">
            <h2 class="text-xl font-semibold text-white mb-4">Highlights</h2>
            <div class="grid grid-cols-2 gap-3">
              {activity.highlights.map((h: string) => (
                <div class="flex items-center gap-3 p-3 bg-ocean-900/50 rounded-lg border border-white/5">
                  <svg class="w-5 h-5 text-gold-400 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
                  <span class="text-gray-300 text-sm">{h}</span>
                </div>
              ))}
            </div>
          </div>

          <div class="mb-8">
            <h2 class="text-xl font-semibold text-white mb-4">What's Included</h2>
            <ul class="space-y-2 text-gray-300 text-sm">
              {['Private hotel pickup & drop-off', 'English-speaking guide', 'All entrance fees included', 'Equipment & safety gear', 'Insurance coverage'].map(item => (
                <li class="flex items-center gap-2">
                  <svg class="w-4 h-4 text-palm-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
                  {item}
                </li>
              ))}
            </ul>
          </div>
        </div>

        <div class="lg:col-span-1">
          <div class="sticky top-24 space-y-6">
            <div class="card p-6">
              <div class="text-2xl font-bold text-gold-400 mb-1">{activity.price}</div>
              <div class="text-gray-400 text-sm mb-6">per person</div>
              <div class="space-y-3 mb-6">
                <div class="flex justify-between text-sm"><span class="text-gray-400">Duration</span><span class="text-white">{activity.duration}</span></div>
                <div class="flex justify-between text-sm"><span class="text-gray-400">Difficulty</span><span class="text-white">{activity.difficulty}</span></div>
                <div class="flex justify-between text-sm"><span class="text-gray-400">Location</span><span class="text-white">{activity.location}</span></div>
              </div>
              <a href={getWhatsAppLink(`Hi! I'd like to book ${activity.title}. Can you help?`)} target="_blank" rel="noopener noreferrer" class="btn-whatsapp w-full mb-3">
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/></svg>
                Book on WhatsApp
              </a>
              <a href="/contact/" class="btn-secondary w-full text-center">Get a Quote</a>
            </div>

            <div class="card p-6">
              <h3 class="font-semibold text-white mb-4">You Might Also Like</h3>
              <div class="space-y-3">
                {relatedActivities.map(r => (
                  <a href={`/activities/${r.slug}/`} class="flex items-center gap-3 p-2 -mx-2 rounded-lg hover:bg-white/5 transition-colors group">
                    <img src={r.image} alt={r.title} class="w-12 h-12 rounded-lg object-cover shrink-0" loading="lazy" />
                    <div>
                      <p class="text-sm text-white group-hover:text-gold-400 transition-colors font-medium">{r.title}</p>
                      <p class="text-xs text-gray-500">{r.price}</p>
                    </div>
                  </a>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
