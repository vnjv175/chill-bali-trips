---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { AREAS } from '../../utils/siteData';
---

<BaseLayout
  title="Bali Areas & Neighborhoods — Where to Go in Bali"
  description="Explore Bali's top destinations: Seminyak, Ubud, Canggu, Uluwatu, Pererenan, and Lovina. Find the perfect area for your travel style."
>
  <section class="section-padding pt-32">
    <div class="container-custom">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">Explore Bali's Best Areas</h1>
        <p class="text-gray-400 text-lg">Each region of Bali has its own character. From the luxury of Seminyak to the spiritual calm of Ubud — find the area that matches your vibe.</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {AREAS.map(area => (
          <a href={`/areas/${area.slug}/`} class="card-hover group">
            <div class="aspect-[2/1] bg-ocean-800 overflow-hidden">
              <img src={area.image} alt={area.title} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" loading="lazy" />
            </div>
            <div class="p-6">
              <div class="flex items-center gap-3 mb-3">
                <h2 class="text-xl font-bold text-white group-hover:text-gold-400 transition-colors">{area.title}</h2>
                <span class="text-xs px-2.5 py-1 bg-gold-500/10 text-gold-400 rounded-full">{area.vibe}</span>
              </div>
              <p class="text-gray-400 leading-relaxed mb-4">{area.description}</p>
              <div class="flex flex-wrap gap-2">
                {area.highlights.map((h: string) => (
                  <span class="text-xs px-2.5 py-1 bg-ocean-900 text-gray-300 rounded-full border border-white/5">{h}</span>
                ))}
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
