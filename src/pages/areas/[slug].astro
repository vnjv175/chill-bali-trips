---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { AREAS, ACTIVITIES, SITE, getWhatsAppLink } from '../../utils/siteData';

export function getStaticPaths() {
  return AREAS.map(area => ({
    params: { slug: area.slug },
    props: { area },
  }));
}

const { area } = Astro.props;

const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    { '@type': 'ListItem', position: 1, name: 'Home', item: SITE.url },
    { '@type': 'ListItem', position: 2, name: 'Areas', item: `${SITE.url}/areas/` },
    { '@type': 'ListItem', position: 3, name: area.title, item: `${SITE.url}/areas/${area.slug}/` },
  ],
};

const nearbyActivities = ACTIVITIES.filter(a =>
  a.location.toLowerCase().includes(area.title.toLowerCase()) || a.location.toLowerCase().includes('various') || a.location.toLowerCase().includes('island')
).slice(0, 6);
---

<BaseLayout title={`Things to Do in ${area.title}, Bali — Complete Guide`} description={area.description}>
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />

  <section class="section-padding pt-32">
    <div class="container-custom">
      <nav class="mb-8 text-sm text-gray-400">
        <a href="/" class="hover:text-gold-400 transition-colors">Home</a>
        <span class="mx-2">/</span>
        <a href="/areas/" class="hover:text-gold-400 transition-colors">Areas</a>
        <span class="mx-2">/</span>
        <span class="text-gray-300">{area.title}</span>
      </nav>

      <div class="mb-12">
        <div class="aspect-[3/1] bg-ocean-800 rounded-2xl overflow-hidden mb-8">
          <img src={area.image} alt={area.title} class="w-full h-full object-cover" loading="eager" />
        </div>
        <div class="flex items-center gap-3 mb-4">
          <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white">{area.title}</h1>
          <span class="text-sm px-3 py-1 bg-gold-500/10 text-gold-400 rounded-full">{area.vibe}</span>
        </div>
        <p class="text-gray-300 text-lg leading-relaxed max-w-3xl">{area.description}</p>
      </div>

      <div class="mb-12">
        <h2 class="text-2xl font-bold text-white mb-6">Top Highlights</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          {area.highlights.map((h: string) => (
            <div class="card p-4 text-center">
              <svg class="w-6 h-6 text-gold-400 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
              <p class="text-white text-sm font-medium">{h}</p>
            </div>
          ))}
        </div>
      </div>

      {nearbyActivities.length > 0 && (
        <div class="mb-12">
          <h2 class="text-2xl font-bold text-white mb-6">Activities Near {area.title}</h2>
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5">
            {nearbyActivities.map(activity => (
              <a href={`/activities/${activity.slug}/`} class="card-hover group p-4 flex items-center gap-4">
                <img src={activity.image} alt={activity.title} class="w-14 h-14 rounded-xl object-cover shrink-0" loading="lazy" />
                <div>
                  <h3 class="text-white font-medium group-hover:text-gold-400 transition-colors">{activity.title}</h3>
                  <p class="text-gold-400 text-sm">{activity.price}</p>
                </div>
              </a>
            ))}
          </div>
        </div>
      )}

      <div class="p-8 md:p-12 bg-gradient-to-br from-gold-500/10 to-sunset-500/10 rounded-2xl border border-gold-500/20 text-center">
        <h2 class="text-2xl md:text-3xl font-bold text-white mb-3">Explore {area.title} with Gede</h2>
        <p class="text-gray-400 max-w-xl mx-auto mb-6">Get a custom itinerary for {area.title} with the best activities, restaurants, and hidden spots — all at local prices.</p>
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
          <a href="/contact/" class="btn-primary">Get a Free Quote</a>
          <a href={getWhatsAppLink(`Hi! I'm interested in exploring ${area.title}. Can you help plan my trip?`)} target="_blank" rel="noopener noreferrer" class="btn-whatsapp">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/></svg>
            Chat on WhatsApp
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
