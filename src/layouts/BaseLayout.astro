---
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import WhatsAppButton from '../components/WhatsAppButton.astro';
import { SITE } from '../utils/siteData';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonicalUrl?: string;
  type?: string;
  noindex?: boolean;
  schema?: object;
}

const {
  title = SITE.name,
  description = SITE.description,
  image = '/images/hero/bali-og.jpg',
  canonicalUrl = Astro.url.href,
  type = 'website',
  noindex = false,
  schema,
} = Astro.props;

const fullTitle = title === SITE.name ? title : `${title} | ${SITE.name}`;
const ogImage = new URL(image, SITE.url).href;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="generator" content={Astro.generator} />

  <!-- Primary Meta -->
  <title>{fullTitle}</title>
  <meta name="description" content={description} />
  <link rel="canonical" href={canonicalUrl} />
  {noindex && <meta name="robots" content="noindex, nofollow" />}

  <!-- Open Graph -->
  <meta property="og:type" content={type} />
  <meta property="og:url" content={canonicalUrl} />
  <meta property="og:title" content={fullTitle} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={ogImage} />
  <meta property="og:site_name" content={SITE.name} />
  <meta property="og:locale" content="en_US" />

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={fullTitle} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={ogImage} />

  <!-- Favicon & Manifest -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  <link rel="apple-touch-icon" href="/images/hero/bali-og.jpg" />
  <link rel="manifest" href="/site.webmanifest" />
  <meta name="theme-color" content="#0a1e3d" />

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet" />

  <!-- Schema.org -->
  {schema && (
    <script type="application/ld+json" set:html={JSON.stringify(schema)} />
  )}

  <!-- Google Analytics: Uncomment and replace G-XXXXXXXXXX with real tracking ID -->
  <!-- <script async src="https://www.googletagmanager.com/gtag/js?id=G-XXXXXXXXXX"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-XXXXXXXXXX');
  </script> -->
</head>
<body class="min-h-screen flex flex-col">
  <Navbar />
  <main class="flex-1">
    <slot />
  </main>
  <Footer />
  <WhatsAppButton />
</body>
</html>
